def_key "0"
    show_clock
def_key "u"
    volume_up
def_key "d"
    volume_down
def_key "j"
    scroll_down
def_key "k"
    scroll_up
def_key "ctrl-u"
    page_up
def_key "ctrl-d"
    page_down
def_key "h"
    previous_column
def_key "l"
    next_column
def_key "L"
    show_lyrics
def_key "."
    next
def_key ","
    previous
def_key "n"
    next_found_item
def_key "N"
    previous_found_item
def_key "t"
  show_tag_editor
def_key "v"
  show_visualizer
def_key "G"
  move_end
def_key "g"
  move_home
def_key "U"
  update_database
def_key "f"
  show_browser
def_key "x"
  delete_playlist_items
def_key "P"
  show_playlist